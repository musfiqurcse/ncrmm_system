@model NCRMM_System.Models.CropsCatagory_tbl

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainEmployeeLayout.cshtml";
}

<form method="POST" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-12">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <center><strong style="font-size: larger">Crops Add Form</strong></center>
                        </div>
                    </div>
                    <div class="panel-body">

                        <div class="form-group">
                            @Html.LabelFor(model => model.CropsCatagoryName, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.CropsCatagoryName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CropsCatagoryName)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Details, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Details, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Details)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
