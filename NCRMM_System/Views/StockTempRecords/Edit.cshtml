@model NCRMM_System.Models.StockTempRecord

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainEmployeeLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>StockTempRecord</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.tmpStockDetailId)

        <div class="form-group">
            @Html.LabelFor(model => model.CropsCatagoryId, "CropsCatagoryId", htmlAttributes: new { @class = "control-label col-md-2" })
